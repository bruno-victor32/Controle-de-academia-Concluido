<!-- Toda vez que entramos no http://localhost:3000/members entramos no index -->

{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">
    <div class="header">
        <a class="button" href="/members/create">Novo</a>
        <form action="/members" method="GET">
            <input 
                type="text"
                name="filter"
                placeholder="Nome ou Email"
                value={{filter}}
            >
            <button type="submit">Filtrar</button>
        </form>

    </div>


    <table width="100%">      <!-- Criando o formato de uma tabela -->
        <thead>  <!-- Cabeçalho -->
            <tr> <!-- Linha -->
                <th>Membro</th>  <!-- Coluna --> 
                <th>Email</th> <!-- Coluna -->
                <th>Peso</th> <!-- Coluna -->
                <th>Altura</th> <!-- Coluna -->
                <th>Ação</th> <!-- Coluna -->

            </tr>
        </thead>
        <tbody>  <!-- Corpo -->
            {% for member in members %}
            <tr> <!-- Linha -->
                <td>
                    <span style="background-image: url({{member.avatar_url}})"></span>
                    {{member.name}}
                </td> <!-- Coluna -->
                <td>{{member.email}}</td> <!-- Coluna -->
                <td>{{member.weight}}kg</td> <!-- Coluna -->
                <td>{{member.height}}cm</td> <!-- Coluna -->
                <td><a href="/members/{{member.id}}">ver</a></td>
            </tr> 
            {% endfor %} 
        </tbody>
    </table>

        <div class="pagination"
        data-page={{pagination.page}}
        data-total={{pagination.total}}
        data-filter={{filter}}
    ></div>

</div>

{% endblock content %}